<div class="newsImageContainer"
      i18n:domain="tbfac.content">

  <span class="isRecommended"
        title="Recommendations: %d"
        tal:attributes="title python:attrs['title'] % view.recommendations"
        tal:condition="python:view.recommended and not view.advisor">[<tal:i18n i18n:translate="">recommended</tal:i18n>]</span>

  <a class="recommendAction"
     href="toggle-recommendation"
     title="Recommendations: 2"
     tal:attributes="title string:Recommendations: ${view/recommendations};
                     href string:${context/absolute_url}/${attrs/href}"
     tal:condition="view/advisor">[<tal:i18n condition="view/recommended_by_me" i18n:translate="">unrecommend</tal:i18n><tal:i18n condition="not:view/recommended_by_me" i18n:translate="">recommend</tal:i18n>]</a>

</div>